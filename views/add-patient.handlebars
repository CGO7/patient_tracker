<div class="row container center indigo z-depth-5">
  <div class="col 6">
    <h2>New Patient Info</h2>

    <div class="form patient-form">
      <div class="form-group">
        <label for="first-name">First Name:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="first-name" required />
      </div>
      <div class="form-group">
        <label for="last-name">Last Name:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="last-name" required />
      </div>
      <div class="form-group">
        <label for="phone-number">Phone Number:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="phone-number" />
      </div>
      <div class="form-group">
        <label for="dob">Date of Birth:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="dob" />
      </div>
      <div class="form-group form-radio">
        <form action="#">
        <label for="Gender">Gender:</label>
          <p>
            <label>
              <input class="with-gap" name="gender" type="radio" checked />
              <span>Male</span>
            </label>
          </p>
          <p>
            <label>
              <input class="with-gap" name="gender" type="radio" />
              <span>Female</span>
            </label>
          </p>
          <p>
            <label>
              <input class="with-gap" name="gender" type="radio" />
              <span>Other</span>
            </label>
          </p>
        </form>
      </div>
      <div class="form-group">
        <label for="drug-allergies">Drug Allergies:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="drug-allergies" />
      </div>
      <div class="form-group">
        <label for="insurance">Insurance:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="insurance" />
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="address" />
      </div>
      <div class="form-group">
        <label for="city">City:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="city" />
      </div>
      <div class="form-group">
        <label for="state">State:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="state" />
      </div>
      <div class="form-group">
        <label for="zip">Zip Code:</label>
        <input class="form-input center white-text" type="text" autocomplete="off" id="zip" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-floating btn-large pulse" type="submit">Submit</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/newpatient.js"></script>
