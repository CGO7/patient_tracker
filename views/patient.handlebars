<div class="container">
<section class="card indigo white-text z-depth-5">
    <div class="row valign-wrapper">
    <div class="col s4">
        <img class="responsive-img circle" alt="profile pic" src="/images/{{patient.id}}.jpg">
    </div>
    <div class="col s8">
        <div class="patient-name">
            Name: {{patient.first_name}} {{patient.last_name}}
        </div>
        <div class="phone_number">
            Phone Number: {{patient.phone_number}}
        </div>
        <div class="birthdate">
            Date of Birth: {{format_date patient.date_of_birth}}
        </div>
        <div class="gender">
        Gender: {{logGender patient.gender}}
        </div>
        <div class="drug_allergies">
            Drug Allergies: {{patient.drug_allergies}}
        </div>
        <div class="insurance">
            Insurance: {{patient.insurance}}
        </div>
        {{#if patient.room_id}}
        <div class="room_number">
            Room Number: {{patient.room.room_number}}
        </div>
        {{/if}}
        {{#if patient.address}}
        <div class="address">
            Address:
            {{ patient.address }}
            {{ patient.city }}, {{ patient.state }} {{ patient.zip_code }}
        </div>
        {{/if}}
    </div>
    </div>
</section>
</div>