<section class="card">
    <div class="patient-name">
      {{first_name}} {{last_name}}
    </div>
    <div class="phone_number">
        {{phone_number}}
    </div>
    <div class="birthdate">
        {{dateofBirth}}
    </div>
    <div class="gender">
        {{gender}} <!-- there might be complications here -->
    </div>
    <div class="drug_allergies">
        {{drug_allergies}}
    </div>
    <div class="insurance">
        {{insurance}}
    </div>
    {{#if room_id}}
    <div class="room_id">
        {{room_id}}
    </div>
    {{/if}}
    <div class="card-body">
      {{#if address}}
        <div class="address">
        {{ address }}
        {{ city }}, {{ state }} {{ zip_code }}
      {{/if}}
      </div>
    </div>
</section>